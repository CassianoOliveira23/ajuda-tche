{% extends 'base.html.twig' %}

{% block title %}PostoColeta{% endblock %}

{% block body %}
   
    <div class="container mt-5 p-5">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h2 class="font-weight-bold">Posto de coleta</h2>
          <div class="d-flex">
            <a
              href="{{ path('app_posto_coleta_index') }}"
              class="btn btn-primary shadow m-1"
              ><i class="fa fa-arrow-left"></i> Voltar</a
            >
            <a
              href="{{ path('app_posto_coleta_edit', {'id': posto_coletum.id}) }}"
              class="btn btn-secondary shadow m-1"
              ><i class="fas fa-pencil"></i
            ></a>
          </div>
        </div>
      
        <div class="card shadow-lg">
          <div class="card-body">
            <table class="table">
              <tbody>
                <tr>
                  <th>Id</th>
                  <td>{{ posto_coletum.id }}</td>
                </tr>
                <tr>
                  <th>Descrição</th>
                  <td>{{ posto_coletum.descricao }}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
{% endblock %}
