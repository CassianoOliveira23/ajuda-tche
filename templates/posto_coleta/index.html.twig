{% extends 'base.html.twig' %}

{% block title %}Postos de Coleta{% endblock %}

{% block body %}
<div class="container mt-5 p-5">
    <h2 class="mb-3">Postos de Coleta</h2>
    <div class="table-responsive">
        <table class="table shadow">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descrição</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for posto_coleta in pager %}
                <tr class="align-middle">
                    <td>{{ posto_coleta.id }}</td>
                    <td>{{ posto_coleta.descricao }}</td>
                    <td class="d-flex justify-content-end gap-2">
                        <a href="{{ path('app_posto_coleta_show', {'id': posto_coleta.id}) }}"
                            class="btn btn-primary"><i class="fas fa-eye"></i></a>

                        {% if is_granted('POSTO_COLETA_EDIT', posto_coleta) %}
                        <a href="{{ path('app_posto_coleta_edit', {'id': posto_coleta.id}) }}"
                            class="btn btn-secondary"><i class="fas fa-pencil"></i></a>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">Nenhum registro encontrado</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-3 mb-5">
            <a href="{{ path('app_posto_coleta_new') }}" class="btn btn-success shadow-sm"><i class="fas fa-plus"></i> Adicionar</a>
            <div>{{ pagerfanta(pager) }}</div>
          </div>
        </div>
    </div>
</div>

</div>
{% endblock %}