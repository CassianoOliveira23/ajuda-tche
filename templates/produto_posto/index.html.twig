{% extends 'base.html.twig' %}

{% block title %}Estoque Posto de coleta{% endblock %}

{% block body %}
    <br>
    <br>
    <br>
    <h1>Estoque Posto de coleta</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Descrição</th>
                <th>Categoria</th>
                <th>Quantidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for produto_posto in pager %}
            <tr>
                <td>{{ produto_posto.produto.descricao }}</td>
                <td>{{ produto_posto.produto.categoria.descricao }}</td>
                <td>{{ produto_posto.quantidade }}</td>
                <td>
                    <a href="{{ path('app_produto_posto_show', {'id': produto_posto.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_produto_posto_edit', {'id': produto_posto.id}) }}" class="btn btn-secondary"><i class="fas fa-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3 mb-5">
        <a href="{{ path('app_produto_posto_new') }}" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Adicionar
        </a>
        <div>{{ pagerfanta(pager) }}</div>
    </div>
{% endblock %}
