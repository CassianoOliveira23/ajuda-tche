{% extends 'base.html.twig' %}

{% block title %}Categorias de produtos{% endblock %}

{% block body %}
    <h1>Categorias de produtos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for categoria in pager %}
            <tr>
                <td>{{ categoria.id }}</td>
                <td>{{ categoria.descricao }}</td>
                <td>
                    <a href="{{ path('app_categoria_show', {'id': categoria.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_categoria_edit', {'id': categoria.id}) }}" class="btn btn-secondary"><i class="fas fa-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3 mb-5">
        <a href="{{ path('app_categoria_new') }}" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Adicionar
        </a>
        <div>{{ pagerfanta(pager) }}</div>
    </div>

{% endblock %}
