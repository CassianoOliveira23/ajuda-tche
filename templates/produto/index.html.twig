{% extends 'base.html.twig' %}

{% block title %}Produtos{% endblock %}

{% block body %}
    <h1>Produtos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>


            {{ pagerfanta(pager) }}

            {% for produto in pager %}
                <tr>
                    <td>{{ produto.id }}</td>
                    <td>{{ produto.descricao }}</td>
                    <td>
                        <a href="{{ path('app_produto_show', {'id': produto.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('app_produto_edit', {'id': produto.id}) }}" class="btn btn-secondary"><i class="fas fa-pencil"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Nenhum registro encontrado</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produto_new') }}" class="btn btn-success">Adicionar</a>
{% endblock %}
