{% extends 'base.html.twig' %}

{% block title %}Motoristas{% endblock %}

{% block body %}
    <h1>Motoristas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for motorista in pager %}
            <tr>
                <td>{{ motorista.id }}</td>
                <td>{{ motorista.nome }}</td>
                <td>{{ motorista.telefone }}</td>
                <td>
                    <a href="{{ path('app_motorista_show', {'id': motorista.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_motorista_edit', {'id': motorista.id}) }}" class="btn btn-secondary"><i class="fas fa-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3 mb-5">
        <a href="{{ path('app_motorista_new') }}" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Adicionar
        </a>
        <div>{{ pagerfanta(pager) }}</div>
    </div>
{% endblock %}
