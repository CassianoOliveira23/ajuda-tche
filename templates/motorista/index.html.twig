{% extends 'base.html.twig' %}

{% block title %}Motoristas{% endblock %}

{% block body %}



<div class="container mt-5 p-5">
    <h1 class="mb-3">Motoristas</h1>

    <div class="table-responsive rounded shadow-lg">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for motorista in pager %}
                <tr class="align-middle">
                    <td>{{ motorista.id }}</td>
                    <td>{{ motorista.nome }}</td>
                    <td>{{ motorista.telefone }}</td>
                    <td class="d-flex justify-content-end gap-2">
                        <a href="{{ path('app_motorista_show', {'id': motorista.id}) }}" class="btn btn-primary"><i
                                class="fas fa-eye"></i></a>
                        <a href="{{ path('app_motorista_edit', {'id': motorista.id}) }}" class="btn btn-secondary"><i
                                class="fas fa-pencil"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">Nenhum registro encontrado</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-between align-items-center mt-3 mb-5">
        <a href="{{ path('app_motorista_new') }}" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Adicionar
        </a>
        <div>{{ pagerfanta(pager) }}</div>
    </div>
    {% endblock %}