{% extends 'base.html.twig' %}

{% block title %}Motorista{% endblock %}

{% block body %}

<div class="container mt-5 p-5">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="font-weight-bold">Motorista</h2>
        <div class="d-flex gap-2 align-items-center">
            <a href="{{ path('app_motorista_index') }}" class="btn btn-primary shadow m-1"><i
                    class="fa fa-arrow-left"></i> Voltar</a>
            <a href="{{ path('app_motorista_edit', { id: motoristum.id }) }}" class="btn btn-secondary shadow m-1"><i
                    class="fas fa-pencil"></i></a>
            {{ include('motorista/_delete_form.html.twig') }}

        </div>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ motoristum.id }}</td>
                    </tr>
                    <tr>
                        <th>Descrição</th>
                        <td>{{ motoristum.nome }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}